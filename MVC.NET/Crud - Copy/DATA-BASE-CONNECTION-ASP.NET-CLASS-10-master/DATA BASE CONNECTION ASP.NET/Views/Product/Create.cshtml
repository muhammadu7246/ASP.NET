@model DATA_BASE_CONNECTION_ASP.NET.Models.Product

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Product</title>

    <!-- Include the custom styles -->
    <link rel="stylesheet" href="~/css/styles.css" /> <!-- Ensure this points to your stylesheet -->
    <style>
        /* General Body Styling */
body {
    font-family: 'Arial', sans-serif;
    background: linear-gradient(135deg, #2b3a42, #1f2d3d);
    color: #d1d1d1;
    margin: 0;
    padding: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
}

/* Container for the form */
.container {
    width: 100%;
    max-width: 450px;
    background-color: #1c1e22;
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    text-align: center;
}

/* Title Styling */
h2 {
    color: #ffffff;
    font-size: 2rem;
    margin-bottom: 20px;
    font-weight: 600;
}

/* Styling for the form groups */
.form-group {
    margin-bottom: 20px;
    text-align: left;
}

/* Label Styling */
label {
    display: block;
    font-size: 1rem;
    color: #a6a6a6;
    margin-bottom: 8px;
    font-weight: 500;
}

/* Input Fields */
input.form-control {
    width: 100%;
    padding: 12px;
    border: 1px solid #444;
    border-radius: 5px;
    font-size: 1rem;
    transition: border 0.3s ease;
    background-color: #2b3a42;
    color: #fff;
}

input.form-control:focus {
    border-color: #007bff;
    background-color: #333;
    outline: none;
}

/* Submit Button */
button.btn {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 12px;
    border-radius: 5px;
    font-size: 1.1rem;
    width: 100%;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

button.btn:hover {
    background-color: #0056b3;
    transform: scale(1.05);
}

/* Alert Box Styling */
.alert.alert-danger {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    padding: 15px;
    border-radius: 5px;
    margin-top: 20px;
    font-size: 0.9rem;
}

    </style>
</head>
<body>

    <div class="container">
        <h2>Create Product</h2>

        @using (Html.BeginForm(FormMethod.Post))
        {
            @Html.AntiForgeryToken() <!-- CSRF protection -->

            <div class="form-group">
                @Html.LabelFor(model => model.Id)
                @Html.TextBoxFor(model => model.Id, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Save</button>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
    </div>

</body>
</html>
